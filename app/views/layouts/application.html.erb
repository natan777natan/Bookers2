<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

<!-- header -->
<header>
<div class="container">
<div class="row">

  <div class="col-sm-4" >
  <h1>Bookers</h1>
  </div>


  <div class="btn col-sm-8" >

<% if user_signed_in? %>
  <ul>
    <li><span class="glyphicon glyphicon-home" aria-hidden="true"></span><%= link_to '  Home', user_path(current_user.id), :style=>"color:#FAFAFA;" %></li>
    <li><span class="glyphicon glyphicon-link" aria-hidden="true"></span><%= link_to "Users", users_path, :style=>"color:#FAFAFA;" %></li>
    <li><span class="glyphicon glyphicon-book" aria-hidden="true"></span><%= link_to "Books", books_path, :style=>"color:#FAFAFA;" %></li>
    <li><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span><%= link_to "  logout", destroy_user_session_path, method: :delete, :style=>"color:#FAFAFA;" %></li>
  </ul>
<% else %>
  <ul>
    <li><span class="glyphicon glyphicon-home" aria-hidden="true"></span><%= link_to "Home", root_path, :style=>"color:#FAFAFA;" %></li>
    <li><span class="glyphicon glyphicon-link" aria-hidden="true"></span><%= link_to "About", home_about_path, :style=>"color:#FAFAFA;" %></li>
    <li><span class="glyphicon glyphicon-edit" aria-hidden="true"></span><%= link_to '  sign up', new_user_registration_path, :style=>"color:#FAFAFA;" %></li>
    <li><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span><%= link_to "  login", new_user_session_path, :style=>"color:#FAFAFA;" %></li>
  </ul>

<% end %>
  </div>
</div>
</div>
</header>

  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
  <% end %>

    <%= yield %>
  </body>
</html>
